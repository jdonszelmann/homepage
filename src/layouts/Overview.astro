---
import Layout from "./Layout.astro";
---

<Layout title="Blog posts">
    <Fragment slot="head">
        <meta name="description" content="list of all blogposts" />
        <style lang="scss">
            html,
            body {
                margin: 0;
                padding: 0;
                background: #f5f5f5;
            }

            body {
                display: grid;
                grid-template-rows: auto;
                grid-template-areas: "left nav middle right";

                grid-template-columns: auto 10em min(40em, 70vw) auto;
                gap: 1em;
            }

            @media (width <= 800px) {
                body {
                    grid-template-columns: 2em auto 2em;
                    grid-template-rows: 3em auto;
                    grid-template-areas:
                        "left nav right"
                        "left middle right";
                }

                nav {
                    padding-top: 1em;
                    flex-direction: row !important;
                }

                .space {
                    display: block;
                    margin-left: auto;
                }

                .toc {
                    display: none;
                }

                .reviewers {
                    display: none !important;
                }
            }
            @media (width > 800px) {
                nav {
                    padding-top: 1.5em;
                    align-self: start;
                    position: sticky;
                    top: 0;
                }
                .toc {
                    display: contents;
                }
            }

            .space {
                display: none;
            }

            main {
                grid-area: middle;
                font-family: "Fira Sans";
            }

            nav {
                background: #f5f5f5;
                grid-area: nav;
                display: flex;
                flex-direction: column;

                justify-content: start;
                align-items: center;

                gap: 1em;
            }

            .menu {
                display: contents;

                a {
                    text-decoration: none;
                    color: black;
                }
            }

            .reviewers {
                display: contents;
            }
        </style>
    </Fragment>
    <Fragment slot="main">
        <slot />
    </Fragment>
</Layout>
