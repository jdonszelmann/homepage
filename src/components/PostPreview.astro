---
import Gh from "./GithubUser.astro";
import { marked } from "marked";

export interface Props {
    post: {
        data: {
            title: string;
            authors: string[];
            reviewers: string[];
            description: string;
            pubDate: Date;
        };
        slug: string;
    };
}

const {
    post: {
        data: { authors, description, title, pubDate },
        slug,
    },
}: Props = Astro.props;
---

<div class="preview">
    <a class="click-area" href=`/blog/${slug}`>
        <h1 class="title">{title}</h1>
        <div
            class="first-paragraph"
            set:html={marked.parse(description || "")}
        />
    </a>

    <div class="author-area">
        {authors.length > 1 ? "Authors:" : "Author:"}
        <div class="authors">
            {authors.map((author: any) => <Gh name={author} large={true} />)}
        </div>

        Published: {pubDate.toISOString().slice(0, 10)}<br />
    </div>
</div>

<style>
    .click-area {
        display: contents;
        color: black;
        text-decoration: none;
    }

    .preview {
        box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
        display: block;
        padding: 1em;
    }

    .author-area {
        display: flex;
        flex-direction: row;
        gap: 1em;
        align-items: center;
    }

    div.authors {
        font-size: 10pt;
    }

    a {
        font-family: "Fira Sans";
        font-size: unset;
        font-weight: normal;
    }
</style>
